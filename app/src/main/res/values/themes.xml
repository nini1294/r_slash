<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomActionBar"
        parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/MyActionBarText</item>
        <item name="android:background">@color/actionbar_color</item>
    </style>

    <style name="MyActionBarText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>
</resources>