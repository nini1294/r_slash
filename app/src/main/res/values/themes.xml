<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomActionBar"
        parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:typeface">monospace</item>-->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/DialogStyle</item>
    </style>
    
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="MyActionBar" parent="Theme.AppCompat.Light">
        <item name="android:titleTextStyle">@style/MyActionBarText</item>
        <item name="android:actionBarSize">@dimen/actionbar_size</item>
        <item name="android:background">@color/actionbar_color</item>
    </style>

    <style name="MyActionBarText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>
</resources>